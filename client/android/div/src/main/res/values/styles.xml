<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Div"/>

    <style name="Div.Layout">
        <item name="android:paddingLeft">@dimen/div_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/div_horizontal_padding</item>
    </style>

    <style name="Div.Text">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Div.RatioImage">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Div.Button">
        <item name="android:background">@drawable/div_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">68dp</item>
    </style>

    <style name="Div.Button.Text" parent="Div.Button">
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">@dimen/div_button_text_horizontal_image_padding</item>
        <item name="android:paddingLeft">@dimen/div_button_text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/div_button_text_horizontal_padding</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/div_text_dark_disabled_80</item>
    </style>

    <style name="Div.Button.Image" parent="Div.Button">
        <item name="android:paddingLeft">@dimen/div_button_text_horizontal_image_padding</item>
        <item name="android:paddingRight">@dimen/div_button_text_horizontal_image_padding</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="Div.Tabs" />
    <style name="Div.Tabs.IndicatorTabLayout">
        <item name="tabTextAppearance">@style/Div.Tabs.IndicatorTabLayout.Text</item>
        <item name="tabIndicatorColor">@color/div_tab_indicator</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabContentEnd">0dp</item>
        <item name="tabContentStart">0dp</item>
        <item name="tabPaddingBottom">1dp</item>
        <item name="tabTextColor">@color/div_text_dark_disabled_50</item>
        <item name="tabSelectedTextColor">@color/div_text_dark_disabled_80</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Div.Tabs.IndicatorTabLayout.Text" parent="TextAppearance.Div.Tab">
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Div.Theme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="ratioImageViewStyle">@style/Div.RatioImage</item>
        <item name="divButtonTextStyle">@style/Div.Button.Text</item>
        <item name="divButtonImageStyle">@style/Div.Button.Image</item>
        <item name="divTabIndicatorLayoutStyle">@style/Div.Tabs.IndicatorTabLayout</item>
    </style>

</resources>

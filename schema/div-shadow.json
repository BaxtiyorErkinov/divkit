{
  "type": "object",
  "description": "Тень элемента.",
  "properties": {
    "color": {
      "$ref": "common.json#/color",
      "description": "Цвет тени.",
      "default_value": "#000000"
    },
    "offset": {
      "$ref": "div-point.json",
      "description": "Смещение тени."
    },
    "blur": {
      "$ref": "common.json#/non_negative_integer",
      "description": "Интенсивность размытия.",
      "default_value": "2"
    },
    "alpha": {
      "type": "number",
      "default_value": "0.19",
      "constraint": "number >= 0.0 && number <= 1.0",
      "description": "Прозрачность тени."
    }
  },
  "required": [
    "offset"
  ]
}

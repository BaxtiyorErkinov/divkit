                "paddings": {
                    "top": 101,
                    "left": 12,
                    "right": 12,
                    "bottom": 12
                },
                "height": {
                    "type": "fixed",
                    "unit": "sp",
                    "value": 240
                },
                "items": [{
                    "type": "text",
                    "$text": "sites_title",
                    "font_size": 16,
                    "line_height": 20,
                    "text_color": "#ffffff",
                    "font_weight": "medium",
                    "max_lines": 5
                }, {
                    "type": "text",
                    "$text": "sites_text",
                    "font_size": 14,
                    "line_height": 18,
                    "text_color": "#99FFFFFF",
                    "max_lines": 4,
                    "height": {
                        "type": "match_parent",
                        "weight": 1
                    }
                }, {
                    "type": "container",
                    "orientation": "horizontal",
                    
                    "paddings": {
                        "top": 11
                    },
                    "items": [{
                        "type": "image",
                        "width": {
                            "type": "fixed",
                            "value": 16
                        },
                        "height": {
                            "type": "fixed",
                            "value": 16
                        },
                        "placeholder_color": "#00ffffff",
                        "$image_url": "sites_favicon"
                    }, {
                        "type": "text",
                        "$text": "sites_source",
                        "paddings": {
                            "left": 4
                        },
                        "font_size": 13,
                        "line_height": 16,
                        "text_color": "#99FFFFFF"
                    }]
                }]
            }]
        },
        "footer": {
            "type": "text",
            "paddings": {
                "bottom": 13,
                "top": 15,
                "left": 16
            },
            "text_alignment_vertical": "bottom",
            "line_height": 16,
            "font_size": 12,
            "text_color": "#80000000",
            "letter_spacing": 0.75,
            "$text": "footer_text",
            "$action": "footer_action"
        }

{
    "templates": {
        "title": {
            "type": "container",
            "$items": "title_items",
            "orientation": "horizontal"
        },
        "title_menu": {
            "type": "image",
            "height": {
                "type": "fixed",
                "value": 44
            },
            "placeholder_color": "#00ffffff",
            "width": {
                "type": "fixed",
                "value": 44
            }
        },
        "title_text": {
            "type": "text",
            "font_size": 20,
            "font_weight": "medium",
            "line_height": 24,
            "paddings": {
                "left": 16,
                "right": 16,
                "top": 12
            },
            "text_color": "#cc000000"
        },
        "sites_card": {
            "type": "container",
            "orientation": "vertical",
            "items": [{
                "type": "title"
            }, {
                "type": "gallery",
                "width": {
                    "type": "match_parent"
                },
                "height": {
                    "type": "fixed",
                    "value": 240,
                    "unit": "sp"
                },
                "paddings": {
                    "left": 16,
                    "right": 16
                },
                "$items": "sites_items"
            }, {
                "type": "footer"
            }],
            "background": [{
                "type": "solid",
                "color": "#FFFFFF"
            }]
        },
        "sites_item": {
            "type": "container",
            "orientation": "overlap",
            "width": {
                "type": "fixed",
                "value": 216
            },
            "height": {
                "type": "fixed",
                "value": 240,
                "unit": "sp"
            },
            "border": {
                "corner_radius": 8
            },
            "background": [{
                "type": "solid",
                "color": "#261E1B"
            }],
            "items": [{
                "type": "separator",
                "background": [{
                    "type": "image",
                    "$image_url": "sites_background_photo"
                }, {
                    "type": "gradient",
                    "angle": 90,
                    "colors": ["#261E1B", "#00261E1B", "#00261E1B"]
                }],
                "delimiter_style": {
                    "color": "#00000000"
                },
                "width": {
                    "type": "fixed",
                    "value": 216
                },
                "height": {
                    "type": "fixed",
                    "unit": "sp",
                    "value": 132
                }
            }, {
                "type": "container",
